@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "AdvManageSystem";
}

@section scripts{

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css"/>
    
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="http://maps.google.com/maps/api/js" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/AdvManage.js")" type="text/javascript"></script>
}
<style>
    .display tbody tr:hover {
        cursor:pointer;
    }
</style>
<div id="modalInfo" class="modal fade" hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Details for </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="control-label  col-sm-3">ConstractionType:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static advType">Builbord</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" >Height:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static advHeight">1.5 m</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" >Width:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static advWidth">1 m</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" >MaintenanceTime:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static advTime">2016-05-04 12:00</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" >MonthlyCost:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static advCost">130$</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" >Location:</label>
                        <div class="col-sm-9">
                           <div id="map" style="width: 300px; height: 300px;">&nbsp;</div>
                        </div>
                    </div>
                </form>                
            </div>
        </div>       
    </div>  
</div>

<input type="button" id="addRow" style="margin: 10px 0;" class="addBtn btn btn-sm btn-default" value="Add new item" />
<table id="advTable" class="display">
    <thead>
        <tr>
            <th>Id</th>
            <th>Height</th>
            <th>Width</th>
            <th>Lat</th>
            <th>Long</th>
            <th>Description</th>
            <th>Maintenance Time</th>
            <th>Type</th>
            <th>Monthly Cost</th>
            <th>Edit / Delete</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Height</th>
            <th>Width</th>
            <th>Lat</th>
            <th>Long</th>
            <th>Description</th>
            <th>Maintenance Time</th>
            <th>Type</th>
            <th>Monthly Cost</th>
            <th>Edit / Delete</th>
        </tr>

    </tfoot>
</table>




